{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "22.x"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend && export SET NODE_OPTIONS=--openssl-legacy-provider && export DISABLE_ESLINT_PLUGIN=true && export ESLINT_NO_DEV_ERRORS=true && npm install --legacy-peer-deps && CI=false npm run build",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "env": {
    "NODE_VERSION": "22.x",
    "NODE_OPTIONS": "--openssl-legacy-provider",
    "DISABLE_ESLINT_PLUGIN": "true",
    "ESLINT_NO_DEV_ERRORS": "true",
    "CI": "false"
  }
} 