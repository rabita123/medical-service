{
  "version": 2,
  "buildCommand": "npm run install-client && npm run build",
  "outputDirectory": "frontend/build",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/build/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/build/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "frontend/build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "frontend/build/manifest.json"
    },
    {
      "src": "/(.*)\\.(?:js|css|json|png|jpg|jpeg|gif|svg|ico)$",
      "dest": "frontend/build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ]
} 