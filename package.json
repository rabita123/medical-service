{
  "name": "medical-service",
  "version": "1.0.0",
  "description": "Medical Service Application",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "build": "DISABLE_ESLINT_PLUGIN=true CI=false npm install && cd frontend && npm install --legacy-peer-deps && npm run build",
    "vercel-build": "npm run build",
    "install-client": "cd frontend && npm install --legacy-peer-deps",
    "install-server": "npm install",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:server": "nodemon backend/server.js",
    "dev:client": "cd frontend && npm start",
    "vercel-dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "dependencies": {
    "express": "^4.17.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "mongoose": "^7.0.0",
    "socket.io": "^4.7.0",
    "colors": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.0",
    "concurrently": "^8.2.2",
    "express-async-handler": "^1.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
